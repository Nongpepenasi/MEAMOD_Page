---
import { getCollection } from "astro:content";

const projects = [
  {
    title: "Malaria Elimination on the web",
    url: "https://maemod-moru.github.io/2018-10-11-malaria-elimination/",
  },
  {
    title: "Estimation of gestational age from fundal height",
    url: "http://www.tropmedres.ac/gestational-age",
  },
  {
    title: "Identify artemisinin resistance",
    url: "https://malaria.shinyapps.io/id_artemisinin_resistance/",
    code: "https://github.com/MAEMOD-MORU/mixmodelpaperfinal",
  },
  {
    title: "Cost-Effectiveness of G6PD Screening",
    url: "http://www.tropmedres.ac/cost-effectiveness-of-g6pd-screening",
  },
  {
    title: "Utility for Randomforest predicting resistance",
    url: "https://moru.shinyapps.io/ahc-ml-amr-cost/",
  },
  {
    title: "HEV vaccination policy evaluation tool",
    url: "https://moru.shinyapps.io/HEVmodel/",
  },
  {
    title: "LOMWRU AMR Dashboard",
    url: "https://moru.shinyapps.io/laoamr/",
  },
  {
    title: "Economic Cost of AMR",
    url: "https://moru.shinyapps.io/amrcost/",
  },
  {
    title: "METCAP: Malaria Elimination Transmission and Costing in the Asia-Pacific",
    url: "https://moru.shinyapps.io/METCAP/",
  },
  {
    title: "SEGmented Regression for Interrupted Time Series (SEGRITS)",
    url: "https://moru.shinyapps.io/SERIES/",
  },
  {
    title: "a web based mathematical modelling tool or *app* to support _Plasmodium  falciparum_ malaria elimination strategy design",
    url: "https://moru.shinyapps.io/MDA_eff/",
  },
  {
    title: "MARC Malaria Data Repository",
    url: "https://moru.shinyapps.io/myanmar_data_repository/",
  },
  {
    title: "Cambodia Malaria Outbreak Detection Tool",
    url: "https://moru.shinyapps.io/CambodiaODT/",
  },
  {
    title: "Modelling optimal strategies to screen and treat chronic Hepatitis C Virus infections",
    url: "https://moru.shinyapps.io/webHepC/",
  },
  {
    title: "Applying taxonomic Boundaries for species Identification",
    url: "https://github.com/slphyx/ABI",
  },
];

const tools = [
  {
    title: "maemod R package",
    url: "https://github.com/slphyx/maemod",
    web: "https://slphyx.shinyapps.io/maemodshiny/",
  },
  {
    title: "P. falciparum Dynamic models",
    url: "https://github.com/slphyx/P.-falciparum-Dynamics",
  },
  {
    title: "Hat Game: A Simple SIR model",
    url: "https://slphyx.shinyapps.io/HatGame/",
    code: "https://github.com/slphyx/hatgame",
  },
  {
    title: "RandomApp",
    url: "https://github.com/MAEMOD-MORU/RandomApp",
  },
];
---

<div class="container mx-auto py-10">
  <h2 class="text-3xl font-bold text-gray-800 mb-6">Projects</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {projects.map((project) => (
      <div class="bg-white p-4 rounded-xl shadow-lg border border-gray-200 hover:shadow-xl hover:scale-105 transition-transform duration-300">
        <h3 class="text-lg font-semibold text-gray-700">
          <a href={project.url} target="_blank" class="hover:text-blue-600">
            {project.title}
          </a>
        </h3>
        {project.code && (
          <p class="text-sm text-gray-500">
            <a href={project.code} target="_blank" class="text-blue-500">
              View Code
            </a>
          </p>
        )}
      </div>
    ))}
  </div>

  <h2 class="text-3xl font-bold text-gray-800 mt-10 mb-6">Tools & Codes</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {tools.map((tool) => (
      <div class="bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition duration-300">
        <h3 class="text-lg font-semibold text-gray-700">
          <a href={tool.url} target="_blank" class="hover:text-blue-600">
            {tool.title}
          </a>
        </h3>
        {tool.web && (
          <p class="text-sm text-gray-500">
            <a href={tool.web} target="_blank" class="text-blue-500">
              Visit Web
            </a>
          </p>
        )}
      </div>
    ))}
  </div>
</div>
