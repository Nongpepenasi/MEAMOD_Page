---
import { projects } from "data/projects";
import Link from "@components/ui/link.astro";
---

<section class="py-10 pb-16">
  <h2 class="text-3xl font-bold text-gray-800 text-center">Recent Projects</h2>
  <p class="text-lg text-gray-600 text-center mt-2">
    Explore some of our latest research and development projects.
  </p>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
    {projects.slice(0, 3).map((project) => (
      <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition duration-300 border border-gray-200">
        <h3 class="text-lg font-semibold text-gray-700">
          <a href={project.url} target="_blank" class="hover:text-blue-600">
            {project.title}
          </a>
        </h3>
        {project.code && (
          <p class="text-sm text-gray-500 mt-2">
            <a href={project.code} target="_blank" class="text-blue-500 font-medium">
              View Code
            </a>
          </p>
        )}
      </div>
    ))}
  </div>

  <div class="text-center mt-8">
    <Link href={`${import.meta.env.BASE_URL}projects`} class="px-6 py-3 bg-black text-white rounded-lg hover:bg-gray-800 hover:text-gray-200 transition">
      More Projects â†’
    </Link>
  </div>
</section>